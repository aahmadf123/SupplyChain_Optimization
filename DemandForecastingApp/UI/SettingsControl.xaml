<UserControl x:Class="DemandForecastingApp.UI.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Forecast Horizon (months):" />
            <TextBox Name="ForecastHorizonTextBox" Width="200" Margin="0,5,0,15" />

            <Label Content="ML Model Parameter:" />
            <TextBox Name="MLModelParameterTextBox" Width="200" Margin="0,5,0,15" />

            <Button Content="Save Settings" Width="100" Click="SaveSettings_Click" />
        </StackPanel>
    </Grid>
</UserControl>
