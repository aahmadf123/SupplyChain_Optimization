<Window x:Class="DemandForecastingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemandForecastingApp"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:ui="clr-namespace:DemandForecastingApp.UI"
        mc:Ignorable="d"
        Title="Demand Forecasting & Inventory Optimization" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Row for input controls -->
            <RowDefinition Height="Auto"/>
            <!-- Row for status bar -->
            <RowDefinition Height="Auto"/>
            <!-- Row for chart display -->
            <RowDefinition Height="2*"/>
            <!-- Row for additional UI components (TabControl) -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Panel for Data Input & Configuration -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10" HorizontalAlignment="Left">
            <Button Content="Load Data" Width="100" Margin="5" Click="LoadData_Click"/>
            
            <Label Content="Lead Time:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Name="LeadTimeTextBox" Width="80" Margin="5"/>
            
            <Label Content="Reorder Threshold:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Name="ReorderThresholdTextBox" Width="80" Margin="5"/>
            
            <Button Content="Run Forecast" Width="100" Margin="5" Click="RunForecast_Click"/>
        </StackPanel>
        
        <!-- Status Bar -->
        <Border Grid.Row="1" BorderBrush="#FFABADB3" BorderThickness="0,1,0,1" Background="#FFF0F0F0">
            <Label Name="StatusLabel" Content="Ready" Margin="5" Padding="5,2"/>
        </Border>

        <!-- Chart Display Area -->
        <Grid Grid.Row="2" Margin="10">
            <lvc:CartesianChart Name="ForecastChart" />
        </Grid>

        <!-- Tab Control for Additional UI Components -->
        <TabControl Name="MainTabControl" Grid.Row="3" Margin="10">
            <TabItem Header="Forecast Details">
                <ui:ForecastDetailsControl />
            </TabItem>
            <TabItem Header="Inventory Recommendations">
                <ui:InventoryRecommendationsControl />
            </TabItem>
            <TabItem Header="Settings">
                <ui:SettingsControl />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
<!-- End of MainWindow.xaml -->