<Window x:Class="DemandForecastingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemandForecastingApp"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:ui="clr-namespace:DemandForecastingApp.UI"
        mc:Ignorable="d"
        Title="Demand Forecasting and Inventory Optimization"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="FuturisticBackground" Color="#1E1E2F" />
        <SolidColorBrush x:Key="PanelBackground" Color="#2D2D3B" />
        <SolidColorBrush x:Key="AccentColor" Color="#8BC34A" />
        <SolidColorBrush x:Key="TextColor" Color="White" />
        <SolidColorBrush x:Key="BorderColor" Color="#3F3F5F" />
        
        <!-- Button Style -->
        <Style x:Key="FuturisticButton" TargetType="Button">
            <Setter Property="Background" Value="#673AB7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBox Style -->
        <Style x:Key="FuturisticTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#242435"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3F3F5F"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <!-- Card Style (Border as replacement) -->
        <Style x:Key="FuturisticCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource FuturisticBackground}">
        <Grid.RowDefinitions>
            <!-- Row 0: Configuration Panel -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Chart Display Area -->
            <RowDefinition Height="2*"/>
            <!-- Row 2: GridSplitter -->
            <RowDefinition Height="5"/>
            <!-- Row 3: TabControl (Forecast Details, Inventory, Settings) -->
            <RowDefinition Height="*"/>
            <!-- Row 4: Status Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TOP CONFIGURATION AREA -->
        <Border Grid.Row="0"
                Style="{StaticResource FuturisticCard}"
                Margin="10">
            <DockPanel Margin="15">
                <TextBlock DockPanel.Dock="Top" Text="Configuration" 
                           FontSize="16" FontWeight="Medium" Margin="0,0,0,10" 
                           Foreground="{StaticResource TextColor}"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <!-- Load Data Button with Icon -->
                    <Button Command="{Binding LoadDataCommand}" 
                            Style="{StaticResource FuturisticButton}"
                            Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Load Data" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <TextBlock Text="Lead Time:" Margin="15,0,5,0" VerticalAlignment="Center" 
                               Foreground="{StaticResource TextColor}"/>
                    <TextBox Text="{Binding LeadTime, UpdateSourceTrigger=PropertyChanged}"
                             Width="80" Margin="0,0,15,0"
                             Style="{StaticResource FuturisticTextBox}"/>
                    
                    <TextBlock Text="Reorder Threshold:" Margin="15,0,5,0" VerticalAlignment="Center" 
                               Foreground="{StaticResource TextColor}"/>
                    <TextBox Text="{Binding ReorderThreshold, UpdateSourceTrigger=PropertyChanged}"
                             Width="80" Margin="0,0,15,0"
                             Style="{StaticResource FuturisticTextBox}"/>
                    
                    <!-- Run Forecast Button -->
                    <Button Command="{Binding RunForecastCommand}" 
                            Style="{StaticResource FuturisticButton}" 
                            Background="{StaticResource AccentColor}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Run Forecast" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- CHART DISPLAY AREA -->
        <Border Grid.Row="1"
                Style="{StaticResource FuturisticCard}"
                Margin="10">
            <Grid Margin="8">
                <lvc:CartesianChart Series="{Binding ForecastSeries}">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time Period" Labels="{Binding ChartLabels}" 
                                  Foreground="White"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Demand" Foreground="White"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>
        </Border>

        <!-- GRID SPLITTER FOR RESPONSIVE DESIGN -->
        <GridSplitter Grid.Row="2"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Height="5"
                      Background="#3F3F5F"
                      ShowsPreview="True"/>

        <!-- TAB CONTROL FOR EXTRA UI COMPONENTS -->
        <Border Grid.Row="3"
                Style="{StaticResource FuturisticCard}"
                Margin="10">
            <TabControl Background="Transparent"
                        BorderBrush="Transparent">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Padding" Value="10,5"/>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="Forecast Details">
                    <DataGrid ItemsSource="{Binding ForecastPoints}" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Background="{StaticResource PanelBackground}"
                              GridLinesVisibility="All"
                              HeadersVisibility="All"
                              BorderBrush="#3F3F5F"
                              BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Period" Binding="{Binding Period}" Width="80"/>
                            <DataGridTextColumn Header="Forecast" Binding="{Binding ForecastedDemand, StringFormat={}{0:F2}}" Width="120"/>
                            <DataGridTextColumn Header="Lower Bound" Binding="{Binding LowerBound, StringFormat={}{0:F2}}" Width="120"/>
                            <DataGridTextColumn Header="Upper Bound" Binding="{Binding UpperBound, StringFormat={}{0:F2}}" Width="120"/>
                            <DataGridTextColumn Header="Reorder Point" Binding="{Binding ReorderPoint}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Inventory Recommendations">
                    <DataGrid ItemsSource="{Binding InventoryRecommendations}" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Background="{StaticResource PanelBackground}"
                              GridLinesVisibility="All"
                              HeadersVisibility="All"
                              BorderBrush="#3F3F5F"
                              BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="120"/>
                            <DataGridTextColumn Header="Current Stock" Binding="{Binding CurrentStock}" Width="100"/>
                            <DataGridTextColumn Header="Recommended Order" Binding="{Binding RecommendedOrder}" Width="140"/>
                            <DataGridTextColumn Header="Lead Time Demand" Binding="{Binding LeadTimeDemand, StringFormat=F2}" Width="140"/>
                            <DataGridTextColumn Header="Safety Stock" Binding="{Binding SafetyStock, StringFormat=F2}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Settings">
                    <ui:SettingsControl/>
                </TabItem>
            </TabControl>
        </Border>

        <!-- STATUS BAR AT THE BOTTOM -->
        <Border Grid.Row="4" 
                Background="{StaticResource PanelBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="10,0,10,10">
            <StackPanel Orientation="Horizontal" Margin="8,4">
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" 
                           Foreground="{StaticResource TextColor}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
