<Window x:Class="DemandForecastingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemandForecastingApp"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:ui="clr-namespace:DemandForecastingApp.UI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Demand Forecasting and Inventory Optimization"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <!-- MaterialDesign Resource Dictionaries for a futuristic look -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Use Dark Theme for a modern, futuristic appearance -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <!-- Recommended Colors for Primary and Accent -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Lime.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Additional futuristic style settings -->
            <SolidColorBrush x:Key="FuturisticBackground" Color="#1E1E2F" />
            <SolidColorBrush x:Key="PanelBackground" Color="#2D2D3B" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource FuturisticBackground}">
        <Grid.RowDefinitions>
            <!-- Row 0: Configuration Panel -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Chart Display Area -->
            <RowDefinition Height="2*"/>
            <!-- Row 2: GridSplitter -->
            <RowDefinition Height="5"/>
            <!-- Row 3: TabControl (Forecast Details, Inventory, Settings) -->
            <RowDefinition Height="*"/>
            <!-- Row 4: Status Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TOP CONFIGURATION AREA -->
        <materialDesign:Card Grid.Row="0"
                  Margin="10"
                  Background="{StaticResource PanelBackground}"
                  UniformCornerRadius="8">
            <DockPanel Margin="15">
                <TextBlock DockPanel.Dock="Top" Text="Configuration" 
                           FontSize="16" FontWeight="Medium" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <!-- Load Data Button with Icon -->
                    <Button Command="{Binding LoadDataCommand}" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileUpload" Width="20" Height="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Load Data" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <TextBlock Text="Lead Time:" Margin="15,0,5,0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding LeadTime, UpdateSourceTrigger=PropertyChanged}"
                             Width="80" Margin="0,0,15,0"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    
                    <TextBlock Text="Reorder Threshold:" Margin="15,0,5,0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding ReorderThreshold, UpdateSourceTrigger=PropertyChanged}"
                             Width="80" Margin="0,0,15,0"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    
                    <!-- Run Forecast Button with Icon -->
                    <Button Command="{Binding RunForecastCommand}" 
                            Style="{StaticResource MaterialDesignRaisedAccentButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartLineVariant" Width="20" Height="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Run Forecast" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>

        <!-- CHART DISPLAY AREA -->
        <materialDesign:Card Grid.Row="1"
                Margin="10"
                Background="{StaticResource PanelBackground}"
                UniformCornerRadius="8">
            <Grid Margin="8">
                <lvc:CartesianChart Series="{Binding ForecastSeries}">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time Period" Labels="{Binding ChartLabels}" 
                                  Foreground="White"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Demand" Foreground="White"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>
        </materialDesign:Card>

        <!-- GRID SPLITTER FOR RESPONSIVE DESIGN -->
        <GridSplitter Grid.Row="2"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Height="5"
                      Background="#3F3F5F"
                      ShowsPreview="True"/>

        <!-- TAB CONTROL FOR EXTRA UI COMPONENTS -->
        <materialDesign:Card Grid.Row="3"
                             Margin="10"
                             Background="{StaticResource PanelBackground}"
                             UniformCornerRadius="8">
            <TabControl Background="Transparent"
                        BorderBrush="Transparent"
                        Style="{StaticResource MaterialDesignNavigatilRailTabControl}">
                <TabItem Header="Forecast Details">
                    <DataGrid ItemsSource="{Binding ForecastPoints}" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Background="{StaticResource PanelBackground}"
                              GridLinesVisibility="All"
                              HeadersVisibility="All"
                              BorderBrush="#3F3F5F"
                              BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Period" Binding="{Binding Period}" Width="80"/>
                            <DataGridTextColumn Header="Forecast" Binding="{Binding ForecastedDemand, StringFormat={}{0:F2}}" Width="120"/>
                            <DataGridTextColumn Header="Lower Bound" Binding="{Binding LowerBound, StringFormat={}{0:F2}}" Width="120"/>
                            <DataGridTextColumn Header="Upper Bound" Binding="{Binding UpperBound, StringFormat={}{0:F2}}" Width="120"/>
                            <DataGridTextColumn Header="Reorder Point" Binding="{Binding ReorderPoint}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Inventory Recommendations">
                    <DataGrid ItemsSource="{Binding InventoryRecommendations}" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Background="{StaticResource PanelBackground}"
                              GridLinesVisibility="All"
                              HeadersVisibility="All"
                              BorderBrush="#3F3F5F"
                              BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="120"/>
                            <DataGridTextColumn Header="Current Stock" Binding="{Binding CurrentStock}" Width="100"/>
                            <DataGridTextColumn Header="Recommended Order" Binding="{Binding RecommendedOrder}" Width="140"/>
                            <DataGridTextColumn Header="Lead Time Demand" Binding="{Binding LeadTimeDemand, StringFormat=F2}" Width="140"/>
                            <DataGridTextColumn Header="Safety Stock" Binding="{Binding SafetyStock, StringFormat=F2}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Settings">
                    <ui:SettingsControl/>
                </TabItem>
            </TabControl>
        </materialDesign:Card>

        <!-- STATUS BAR AT THE BOTTOM -->
        <materialDesign:Card Grid.Row="4"
                             Margin="10,0,10,10" 
                             Background="{StaticResource PanelBackground}"
                             UniformCornerRadius="4">
            <StackPanel Orientation="Horizontal" Margin="8,4">
                <materialDesign:PackIcon Kind="InformationOutline" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
